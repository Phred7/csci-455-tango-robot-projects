<Widgets>:
    Button:
        text: "Press me"
        on_release: root.btn()

<P>:
    Label:
        text: "You pressed the button"
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":1}

     # create checkboxes
    Label:
        text: "Apple"
        pos_hint: {"x":0.2, "top":1}

    CheckBox:
    # When check box selected, it will call checkboxes_click() method
        on_active: root.checkboxes_click(self, self.active, "Apple")
        pos_hint: {"x":0.3, "top":1}

    Label:
        text: "Apple2"
        pos_hint: {"x":-0.2, "top":1.2}

    CheckBox:
    # When check box selected, it will call checkboxes_click() method
        on_active: root.checkboxes_click(self, self.active, "Apple2")
        pos_hint: {"x":-0.1, "top":1.2}


    Button:
        text: "You pressed the button"
        size_hint: 0.8, 0.2
        pos_hint: {"x":0.1, "y":0.1}
